<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubActivity.AddNewClient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Name"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/ancn"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of pay "
            android:visibility="gone"
            android:id="@+id/ancd"
            android:layout_margin="10dp"
            android:padding="10dp"/>

        </android.support.design.widget.TextInputLayout>



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="2"
        android:id="@+id/ancradioGroup"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cow"
            android:id="@+id/ancrcow"
            android:padding="20dp"
            android:layout_weight="1"/>


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buffalo"
            android:id="@+id/ancrbuffalo"
            android:layout_weight="1"
            android:padding="20dp"/>

    </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:id="@+id/ancpn"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:maxLength="10"
        android:inputType="phone"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plot number"
        android:id="@+id/ancplno"
        android:layout_margin="10dp"
        android:padding="10dp"
        />

        </android.support.design.widget.TextInputLayout>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Locality"
            android:id="@+id/ancl"
            android:layout_margin="10dp"
            android:padding="10dp"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JAIPUR"
            android:enabled="false"
            android:id="@+id/anccity"
            android:layout_margin="10dp"
            android:padding="10dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RAJASTHAN"
            android:enabled="false"
            android:id="@+id/ancs"
            android:layout_margin="10dp"
            android:padding="10dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Liter Price"
        android:id="@+id/anclp"
        android:layout_margin="10dp"
        android:inputType="number"
        android:padding="10dp"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Half Liter Price"
        android:id="@+id/anchlp"
        android:layout_margin="10dp"
        android:inputType="number"
        android:padding="10dp"/>
            
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Due Of Customer"
        android:id="@+id/anccd"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="0"
        android:inputType="number"
        />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="---------Customer's Milk Update-------------"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                    android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lit quantity"

                    android:textColor="@color/black"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/round_2"
                    android:orientation="horizontal"

                    android:padding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">


                    <ImageButton
                        android:id="@+id/ancdecrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/indechome"
                        android:src="@drawable/ic_remove_black_24dp" />

                    <TextView
                        android:id="@+id/ancanclq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:layout_centerHorizontal="true"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/ancincrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@color/indechome"
                        android:src="@drawable/ic_add_black_24dp" />
                </RelativeLayout>

            </LinearLayout>



           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:background="@drawable/round_5"
               android:padding="5dp"
               android:layout_margin="5dp"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:text="Half lit quantity"/>

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/round_2"
                   android:orientation="horizontal"
                   android:layout_marginTop="4dp"

                   android:padding="5dp">

                   <ImageButton
                       android:id="@+id/ancdecreaseh"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:background="@color/indechome"
                       android:src="@drawable/ic_remove_black_24dp" />

                   <TextView
                       android:id="@+id/ancanchlq"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:gravity="center"
                       android:text="0"
                       android:layout_centerHorizontal="true"
                       android:textSize="20dp"
                       android:textStyle="bold" />

                   <ImageButton
                       android:id="@+id/ancincreaseh"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_centerVertical="true"
                       android:layout_gravity="center"
                       android:background="@color/indechome"
                       android:src="@drawable/ic_add_black_24dp" />
               </RelativeLayout>


           </LinearLayout>






        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:id="@+id/ancsubmit"
            android:background="@drawable/round_4"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Clear"
            android:textColor="@color/white"
            android:id="@+id/ancclear"
            android:background="@drawable/round_4"

            />

    </LinearLayout>

</LinearLayout>
</ScrollView>